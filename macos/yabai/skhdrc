# open terminal
shift + ctrl + alt - return : /Applications/kitty.app/Contents/MacOS/kitty

# close current window
shift + ctrl + alt - q : yabai -m window --close

# toggle window zoom
shift + ctrl + alt - z : yabai -m window --toggle zoom-fullscreen

# toggle window split type
shift + ctrl + alt - g : yabai -m window --toggle split

# balance size of windows
shift + ctrl + alt - b : yabai -m space --balance

# focus window
shift + ctrl + alt - n : yabai -m window --focus west
shift + ctrl + alt - e : yabai -m window --focus south
shift + ctrl + alt - i : yabai -m window --focus north
shift + ctrl + alt - o : yabai -m window --focus east

# swap managed window
shift + ctrl + alt + cmd - n : yabai -m window --swap west
shift + ctrl + alt + cmd - e : yabai -m window --swap south
shift + ctrl + alt + cmd - i : yabai -m window --swap north
shift + ctrl + alt + cmd - o : yabai -m window --swap east

# move window to adjacent space
shift + ctrl + alt + cmd - u : yabai -m window --space prev
shift + ctrl + alt + cmd - y : yabai -m window --space next

# move window to specific space
shift + ctrl + alt + cmd - x : yabai -m window --space 1
shift + ctrl + alt + cmd - c : yabai -m window --space 2
shift + ctrl + alt + cmd - d : yabai -m window --space 3
shift + ctrl + alt + cmd - r : yabai -m window --space 4
shift + ctrl + alt + cmd - s : yabai -m window --space 5
shift + ctrl + alt + cmd - t : yabai -m window --space 6
shift + ctrl + alt + cmd - w : yabai -m window --space 7
shift + ctrl + alt + cmd - f : yabai -m window --space 8
shift + ctrl + alt + cmd - p : yabai -m window --space 9
shift + ctrl + alt + cmd - a : yabai -m window --space 10

# move focus to adjacent monitor
shift + ctrl + alt - 0x1B : yabai -m display --focus prev # 0x1B = minus
shift + ctrl + alt - 0x18 : yabai -m display --focus next # 0x18 = equal

# move window to adjacent monitor
# NOTE: macOS reserves `hyper + ,` and `hyper + .` for sysdiagnose. Remapped
# comma, period to minus, equal
shift + ctrl + alt + cmd - 0x1B : yabai -m window --display prev # 0x1B = minus
shift + ctrl + alt + cmd - 0x18 : yabai -m window --display next # 0x18 = equal

# change window size
shift + ctrl + alt - h : yabai -m window --resize left:100:0; yabai -m window --resize right:-100:0 # shrink width
shift + ctrl + alt - j : yabai -m window --resize top:0:-100; yabai -m window --resize bottom:0:100 # grow height
shift + ctrl + alt - k : yabai -m window --resize top:0:100; yabai -m window --resize bottom:0:-100 # shrink height
shift + ctrl + alt - l : yabai -m window --resize left:-100:0; yabai -m window --resize right:100:0 # grow width

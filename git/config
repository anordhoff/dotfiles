	templatedir = ~/.config/git/template
[commit]
	gpgsign = true
	verbose = true
[pull]
	ff = only
[diff]
	algorithm = histogram
[merge]
	tool = vim-fugitive
[mergetool]
	keepBackup = false
[mergetool "vim-fugitive"]
	cmd = nvim -c \"Gvdiffsplit!\" \"$MERGED\" -c \"Gdiffsplit :1\" -c \"wincmd p\" -c \"wincmd J\"
[branch]
	sort = -committerdate
	sort = -HEAD
[submodule]
	recurse = true
[alias]
	br = branch -vv
	cm = commit -m
	ca = commit --amend
	co = checkout
	rs = reset
	st = status
	ctags = !.git/hooks/ctags

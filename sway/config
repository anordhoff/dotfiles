client.focused          #4c7899 #1c1c1c #abb2bf #2e9ef4   #285577
client.focused_inactive #333333 #1c1c1c #abb2bf #484e50   #5f676a
client.unfocused        #333333 #1c1c1c #5c6370 #292d2e   #222222
client.urgent           #e06c75 #1c1c1c #abb2bf #900000   #900000
client.placeholder      #000000 #1c1c1c #abb2bf #000000   #0c0c0c
client.background       #000000


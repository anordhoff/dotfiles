#################### Basic configuration ####################
# preferred terminal emulator
set $term kitty

# preferred application launcher
set $menu dmenu_path | wofi --show drun -i | xargs swaymsg exec --

# wallpaper
set $wallpaper $HOME/Pictures/space-shuttle.jpg

# font
font San Francisco Display Medium 10

# disable focus wrapping
focus_wrapping no

# disable mouse focus
focus_follows_mouse no

# remove title bars
default_border pixel 1

#################### Output configuration ####################
output eDP-1 {
    position 0 520
    resolution 1920x1080
    background $wallpaper fill
}

output DP-1 {
    position 1920 0
    resolution 3840x1600
    background $wallpaper center
}

# clamshell mode
bindswitch --reload lid:on output eDP-1 disable
bindswitch --reload lid:off output eDP-1 enable

#################### Input configuration ####################
# input 1:1:AT_Translated_Set_2_keyboard {
#     repeat_delay 200
#     repeat_rate 35
#     xkb_layout custom
#     xkb_options ctrl:swap_lalt_lctl_lwin,ctrl:swap_rwin_rctl
# }

input 4661:22137:kmonad_output {
    repeat_delay 200
    repeat_rate 35
}

input 51984:16982:Keebio_Keebio_Iris_Rev._4 {
    repeat_delay 200
    repeat_rate 35
}

input 1739:31251:SYNA2393:00_06CB:7A13_Touchpad {
    # tap enabled
    click_method clickfinger
    dwt enabled
    natural_scroll enabled
}

input 1133:49970:Logitech_Gaming_Mouse_G502 {
    accel_profile flat
}

# volume keys
bindsym XF86AudioRaiseVolume exec amixer -q set Master 5%+
bindsym XF86AudioLowerVolume exec amixer -q set Master 5%-
bindsym XF86AudioMute exec amixer -q -D pulse set Master toggle

# media player keys
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioPlay exec playerctl play-pause

# backlight keys
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# capture the focused monitor to clipboard
bindsym Print exec grim -o $(swaymsg -t get_outputs | jq -r ".[] | select(.focused) | .name") - | wl-copy

# capture the specified area to clipboard
bindsym Ctrl+Print exec grim -g "$(slurp)" - | wl-copy

#################### Key bindings ####################
# modifier
set $mod Mod4

# movement keys
set $left  n
set $down  e
set $up    i
set $right o
set $prev  h
set $next  comma

# start terminal
bindsym $mod+Return exec $term

# kill focused window
bindsym $mod+q kill

# start launcher
bindsym $mod+Space exec $menu

# change focus
bindsym $mod+$left  focus left
bindsym $mod+$down  focus down
bindsym $mod+$up    focus up
bindsym $mod+$right focus right

# move focused window
bindsym $mod+Ctrl+$left  move left
bindsym $mod+Ctrl+$down  move down
bindsym $mod+Ctrl+$up    move up
bindsym $mod+Ctrl+$right move right

# split in horizontal orientation
bindsym $mod+Ctrl+s splith

# split in vertical orientation
bindsym $mod+Ctrl+v splitv

# enter fullscreen mode for the focused container
bindsym $mod+Ctrl+f fullscreen

# change container layout
bindsym $mod+Ctrl+w layout tabbed
bindsym $mod+Ctrl+t layout toggle split

# define names for the default workspaces
set $ws1  "1"
set $ws2  "2"
set $ws3  "3"
set $ws4  "4"
set $ws5  "5"
set $ws6  "6"
set $ws7  "7"
set $ws8  "8"
set $ws9  "9"
set $ws10 "10"

# define names for adjacent workspaces
set $wsleft  "$(( $( swaymsg -t get_workspaces | jq '.[] | select(.focused).num' ) - 1 ))";
set $wsright "$(( $( swaymsg -t get_workspaces | jq '.[] | select(.focused).num' ) + 1 ))";

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# switch between adjacent workspaces
bindsym $mod+$prev workspace prev
bindsym $mod+$next workspace next

# move focused container to workspace
bindsym $mod+Ctrl+1 move container to workspace $ws1
bindsym $mod+Ctrl+2 move container to workspace $ws2
bindsym $mod+Ctrl+3 move container to workspace $ws3
bindsym $mod+Ctrl+4 move container to workspace $ws4
bindsym $mod+Ctrl+5 move container to workspace $ws5
bindsym $mod+Ctrl+6 move container to workspace $ws6
bindsym $mod+Ctrl+7 move container to workspace $ws7
bindsym $mod+Ctrl+8 move container to workspace $ws8
bindsym $mod+Ctrl+9 move container to workspace $ws9
bindsym $mod+Ctrl+0 move container to workspace $ws10

# move focuse container to adjacent workspace
bindsym $mod+Ctrl+$prev exec swaymsg move container to workspace $wsleft
bindsym $mod+Ctrl+$next exec swaymsg move container to workspace $wsright

# lock computer
bindsym $mod+l exec "swaylock -f -i $wallpaper"

# reload the configuration file
bindsym $mod+Ctrl+c reload

# exit sway (logs you out of your Wayland session)
bindsym $mod+Ctrl+x exec swaynag -t warning -m "You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session." -b "Yes, exit sway" "swaymsg exit"

# resize window
bindsym $mod+Alt+$left  resize shrink width  100px
bindsym $mod+Alt+$down  resize grow   height 100px
bindsym $mod+Alt+$up    resize shrink height 100px
bindsym $mod+Alt+$right resize grow   width  100px

#################### Style ####################
# class                 border  backgr. text    indica. ch_bor.
client.focused          #505050 #505050 #cfd6e6 #808080 #606060
client.focused_inactive #303030 #303030 #cfd6e6 #404040 #303030
client.unfocused        #303030 #303030 #cfd6e6 #404040 #303030
client.urgent           #bf5858 #303030 #cfd6e6 #bf5858 #bf5858

#################### Source ####################
include /etc/sway/config.d/*
exec "systemctl --user import-environment; systemctl --user start sway-session.target"

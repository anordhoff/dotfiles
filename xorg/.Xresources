! ------------------------------------------------------------------------------
! Xft font configuration
! ------------------------------------------------------------------------------

Xft.hinting:    1
Xft.hintstyle:  hintslight
Xft.antialias:  1
Xft.rgba:       rgb 
Xft.autohint:   0
Xft.lcdfilter:  lcddefault

! ------------------------------------------------------------------------------
! URxvt configuration
! ------------------------------------------------------------------------------

! font configs
URxvt*font:             xft:Liberation Mono:style=Regular:size=10
URxvt*boldFont:         xft:Liberation Mono:style=Bold:size=10
URxvt*italicFont:       xft:Liberation Mono:style=Italic:size=10
URxvt*boldItalicFont:   xft:Liberation Mono:style=Bold Italic:size=10

! font spacing
URxvt*letterSpace:      0
URxvt.lineSpace:        0

! general settings
URxvt*saveline:         50000
URxvt*termName:         rxvt-256color
URxvt*iso14755:         false
URxvt*urgentOnBell:     true

! appearance
URxvt*depth:            24
URxvt*scrollBar:        false
URxvt*scrollBar_right:  false
URxvt*internalBorder:   10
URxvt*externalBorder:   0
URxvt.geometry:         80x24
URxvt.cursorBlink:      true
URxvt.cursorUnderline:  false

! remap copy and paste
URxvt.keysym.Control-Meta-c:    builtin-string:
URxvt.keysym.Control-Meta-v:    builtin-string:
URxvt.keysym.Shift-Control-C:   eval:selection_to_clipboard
URxvt.keysym.Shift-Control-V:   eval:paste_clipboard

! ------------------------------------------------------------------------------
! Rofi configuration
! ------------------------------------------------------------------------------

rofi.color-enabled: true
rofi.color-window: #222222, #222222, #222222
rofi.color-normal: #222222, #bbbbbb, #222222, #222222, #285577
rofi.color-active: #222222, #bbbbbb, #222222, #222222, #285577
rofi.color-urgent: #222222, #be5046, #222222, #222222, #be5046
rofi.modi: run,drun,window

! ------------------------------------------------------------------------------
! Dmenu configuration
! ------------------------------------------------------------------------------

dmenu.selforeground:        #bbbbbb
dmenu.background:           #222222
dmenu.selbackground:        #285577
dmenu.foreground:           #222222

! ------------------------------------------------------------------------------
! Multiple monitor cursor fix
! ------------------------------------------------------------------------------

Xcursor.size: 16


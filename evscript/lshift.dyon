//! [events]
//! keys = ['LEFTSHIFT', 'Z', 'SLASH']
fn main() ~ evdevs, uinput {
    should_lshift := false
    should_rshift := false
    loop {
        evts := next_events(evdevs)
        for i {
            evt := evts[i]
            xcape(mut should_lshift, evt, KEY_LEFTSHIFT(), [KEY_Z()])
            xcape(mut should_rshift, evt, KEY_RIGHTSHIFT(), [KEY_SLASH()])
        }
    }
}
